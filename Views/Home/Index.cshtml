@if (HttpContext.Current.Session.IsNewSession != false || HttpContext.Current.Session["name"] == null)
{
        Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    [class*="badger"] {
        position: relative;
        margin: 5px 0;
        padding: 39px 19px 14px;
        background: #fff;
        border: 5px solid #ddd;
        border-radius: 6px;
        font-size: 15px;
        background-color:#282828;
        color:white;
    }
    [class*="badger"]:after {
        content: attr(data-badger);
        position: absolute;
        top: 0;
        padding: 3px 7px;
        font-size: 20px;
        font-weight: bold;
        background: #999;
        color: #fff;
    }
    .badger-left:after {
        left: 0;
        border-radius: 6px 0 6px 0;
    }
    .badger-right:after {
        right: 0;
        border-radius: 0 6px 0 6px;
    }
</style>
<marquee behavior="scroll" direction="left" onmouseover="this.stop();" onmouseout="this.start();"><img style="width:400px;height:300px" src="/Content/Images/Daewoo1.jpg" /><img style="width:400px;height:300px" src="/Content/Images/pic3.jpg" /></marquee>
<div>
    <h1 style="text-align:center;color:blueviolet">Welcome to Daewoo Reservation System</h1>
</div>
